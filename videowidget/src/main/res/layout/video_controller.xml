<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size48"
        android:background="@color/bar_bg"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/size48"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing4"
            android:layout_marginRight="@dimen/spacing4"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing16"
            android:layout_marginRight="@dimen/spacing16"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <Button
            android:layout_width="@dimen/size48"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing8"
            android:background="@drawable/ic_more" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/ic_play_circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size48"
        android:background="@drawable/test"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/size48"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/spacing4"
            android:layout_marginRight="@dimen/spacing4"
            android:background="@drawable/ic_play" />

        <SeekBar
            android:id="@+id/seekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:max="1000"
            android:progress="100" />

        <Button
            android:layout_width="@dimen/size48"
            android:layout_height="match_parent"
            android:background="@drawable/ic_volume_off" />

        <Button
            android:layout_width="@dimen/size48"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/spacing4"
            android:background="@drawable/ic_fullscreen" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bar_bg"
        android:orientation="vertical">

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/spacing4"
                android:layout_marginRight="@dimen/spacing4"
                android:background="@drawable/ic_play" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_volume_off" />

            <Button
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/spacing4"
                android:background="@drawable/ic_fullscreen" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>